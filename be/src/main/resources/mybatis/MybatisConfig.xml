<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="IssueVO" type="codesquad.kr.gyeonggidoidle.issuetracker.domain.issue.repository.vo.IssueVO"/>
        <typeAlias alias="FilterCondition" type="codesquad.kr.gyeonggidoidle.issuetracker.domain.issue.service.condition.FilterCondition" />
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3308/issue-tracker?allowMultiQueries=true"/>
                <property name="username" value="user"/>
                <property name="password" value="admin"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis/filter.xml"/>
        <mapper resource="mybatis/testSchema.xml" />
    </mappers>
</configuration>
